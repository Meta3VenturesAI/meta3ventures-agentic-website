{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "dist/llm",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/llm", "agents", "scripts"],
  "exclude": ["dist", "build", "out", "**/*.spec.ts", "**/*.test.ts"]
}

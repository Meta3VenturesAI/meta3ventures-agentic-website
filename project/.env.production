# Meta3 Ventures - Production Environment Variables
# These values will be overridden by Netlify environment variables

# =================================
# CORE APPLICATION CONFIGURATION
# =================================

# Environment
VITE_APP_ENV=production
NODE_ENV=production

# =================================
# SUPABASE CONFIGURATION
# =================================

# Supabase (database) - Set in Netlify dashboard
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =================================
# FORMSPREE CONFIGURATION
# =================================

# Formspree (form handling) - Safe to commit
VITE_FORMSPREE_PROJECT_ID=mldbpggn
VITE_FORMSPREE_CONTACT_KEY=mldbpggn
VITE_FORMSPREE_APPLY_KEY=myzwnkkp
VITE_FORMSPREE_NEWSLETTER_KEY=xdkgwaaa

# =================================
# AUTHENTICATION & SECURITY
# =================================

# Admin authentication - Set in Netlify dashboard
VITE_ADMIN_PASSWORD=your_admin_password_here
VITE_ADMIN_PASSWORD_HASH=

# JWT secret for production
VITE_AUTH_SECRET=your_production_jwt_secret_here

# =================================
# AI AGENT LLM PROVIDERS
# =================================

# Primary Cloud Providers for Virtual Agents - Set in Netlify dashboard
VITE_GROQ_API_KEY=your_groq_api_key_here
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Additional Cloud Providers - Set in Netlify dashboard
VITE_DEEPSEEK_API_KEY=your_deepseek_api_key_here
VITE_HUGGINGFACE_API_KEY=your_huggingface_api_key_here
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here
VITE_MISTRAL_API_KEY=your_mistral_api_key_here

# =================================
# VIRTUAL AGENTS CONFIGURATION
# =================================

# Agent System Feature Flags
VITE_AGENTS_DISABLED=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_FALLBACK=true

# Agent Proxy Configuration (Netlify functions)
VITE_AGENT_PROXY_PATH=/.netlify/functions/agent-proxy

# Local LLM Fallback Configuration (not used in production)
VITE_OLLAMA_URL=http://localhost:11434
VITE_OLLAMA_MODEL=llama3.2:3b
VITE_VLLM_URL=http://localhost:8000/v1
VITE_VLLM_MODEL=meta-llama/Llama-2-7b-chat-hf

# Default Model Configuration
VITE_DEFAULT_OLLAMA_MODEL=llama3.2:3b
VITE_DEFAULT_VLLM_MODEL=meta-llama/Llama-2-7b-chat-hf
VITE_DEFAULT_LOCALAI_MODEL=ggml-gpt4all-j

# =================================
# FEATURE FLAGS
# =================================

# Core Features
VITE_ENABLE_AI_ADVISORS=true
VITE_ENABLE_BLOG=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AUTO_SAVE=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_BACKUPS=true

# =================================
# PRODUCTION SETTINGS
# =================================

# Disable debug logging in production
VITE_DEBUG=false
VITE_LOG_LEVEL=error
VITE_DEV_MODE=false

# CORS settings for production
VITE_CORS_ORIGINS=https://meta3ventures.com,https://www.meta3ventures.com

# =================================
# SECURITY CONFIGURATION
# =================================

# Security headers
VITE_ENABLE_SECURITY_HEADERS=true
VITE_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com https://formspree.io https://*.supabase.co wss://*.supabase.co; frame-src 'self' https://www.google.com; object-src 'none';

# =================================
# API CONFIGURATION
# =================================

# API Configuration
VITE_API_URL=https://meta3ventures.com
VITE_API_TIMEOUT=30000

# Rate Limiting
VITE_FORM_RATE_LIMIT=5
VITE_FORM_RATE_WINDOW=60000

# File Upload Settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx

# =================================
# PWA SETTINGS
# =================================

VITE_PWA_ENABLED=true
VITE_PWA_REGISTER_TYPE=prompt
